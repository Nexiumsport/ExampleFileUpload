@page
@model PImag.Pages.Personas.EditModel

@{
    ViewData["Title"] = "Personas-Editar";
}
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-4">
          <h4>Listado de Personas</h4>
        </div>
        <div class="col-sm-4">
          
        </div>
        <div class="col-sm-4">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a asp-page="/Index">Inicio</a></li>
            <li class="breadcrumb-item active">Listado</li>
          </ol>
        </div>
      </div>
    </div>
  </div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Persona.ID" />
            <div class="form-group">
                <label asp-for="Persona.nombre" class="control-label"></label>
                <input asp-for="Persona.nombre" class="form-control" />
                <span asp-validation-for="Persona.nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Persona.apellido" class="control-label"></label>
                <input asp-for="Persona.apellido" class="form-control" />
                <span asp-validation-for="Persona.apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Persona.profesion" class="control-label"></label>
                <input asp-for="Persona.profesion" class="form-control" />
                <span asp-validation-for="Persona.profesion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Persona.fecha_nacimiento" class="control-label"></label>
                <input asp-for="Persona.fecha_nacimiento" class="form-control" />
                <span asp-validation-for="Persona.fecha_nacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Persona.archivoID" class="control-label"></label>
                <select asp-for="Persona.archivoID" class="form-control" asp-items="ViewBag.archivoID"></select>
                <span asp-validation-for="Persona.archivoID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-page="./Index">Regresar a Listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
