@page
@model PImag.Pages.Personas.DetailsModel

@{
    ViewData["Title"] = "Persona-Detalles";
}
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-4">
          <h4>Listado de Personas</h4>
        </div>
        <div class="col-sm-4">
          
        </div>
        <div class="col-sm-4">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a asp-page="/Index">Inicio</a></li>
            <li class="breadcrumb-item active">Listado</li>
          </ol>
        </div>
      </div>
    </div>
  </div>
</div>
<div>
    <h4>Persona</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Persona.nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Persona.nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Persona.apellido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Persona.apellido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Persona.profesion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Persona.profesion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Persona.fecha_nacimiento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Persona.fecha_nacimiento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Persona.Archivo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Persona.Archivo.ID)
        </dd>
    </dl>
</div>

<div>
    <a class="btn btn-info" asp-page="./Edit" asp-route-id="@Model.Persona.ID">Editar</a> |
    <a asp-page="./Index">Regresar a Listado</a>
</div>
