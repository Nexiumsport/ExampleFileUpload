@page
@model PImag.Pages.Personas.IndexModel

@{
    ViewData["Title"] = "Personas";
}
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-4">
          <h4>Listado de Personas</h4>
        </div>
        <div class="col-sm-4">
          <a class="btn btn-success btn-sm" asp-page="./Create">Nuevo</a>
        </div>
        <div class="col-sm-4">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a asp-page="/Index">Inicio</a></li>
            <li class="breadcrumb-item active">Listado</li>
          </ol>
        </div>
      </div>
    </div>
  </div>
<table class="table table-responsive table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Persona[0].Archivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persona[0].nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persona[0].apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persona[0].nombre_apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persona[0].nombre_corto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persona[0].profesion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persona[0].fecha_nacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persona[0].edad)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Persona) {
        <tr>
            <td class="text=center">
               <img src="@String.Format(" data:image/jpg;base64,{0}", Convert.ToBase64String(item.Archivo.image_file))"
                class="img-profile rounded-circle" alt="User Image" width="40" height="40" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.apellido)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.nombre_apellido)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.nombre_corto)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.profesion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha_nacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.edad)
            </td>
            
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Detalles</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
